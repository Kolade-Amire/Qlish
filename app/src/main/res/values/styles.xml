        <item name="itemIconTint">@color/logo_fill_dark_faded</item>
        <item name="itemIconSize">42dp</item>
        <item name="android:background">@color/logo_fill</item>
        <item name="android:itemBackground">@color/logo_fill_dark_faded</item>
