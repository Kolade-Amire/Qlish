<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Widget.App.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemIconTint">@color/logo_fill_dark_faded</item>
        <item name="itemIconSize">45dp</item>
        <item name="android:background">@color/logo_fill</item>
        <item name="android:itemBackground">@color/logo_fill_dark_faded</item>
        <item name="itemTextColor">@color/logo_fill_dark</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:fontFamily">@font/ubuntu_mono</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/app_white</item>
        <item name="colorOnSurfaceVariant">@color/logo_fill</item>
    </style>

    <style name="largeElevatedCardStyle">
       <item name="cardBackgroundColor"> @color/app_white</item>
        <item name="cardElevation"> 8dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="largeCardStyle">
        <item name="cardBackgroundColor"> @color/logo_fill</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="strokeColor">@color/logo_fill_dark_faded</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="appTextStyleLight">
        <item name="android:fontFamily">@font/ubuntu_mono</item>
        <item name="android:textColor">@color/logo_fill_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>