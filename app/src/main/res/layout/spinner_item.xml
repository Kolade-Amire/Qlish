<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">
    <TextView
        android:id="@+id/textItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="22sp"
        android:text="@string/text_grammar"
        android:gravity="center_vertical"
        android:textColor="@color/logo_fill_dark"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dropdown_arrow"/>

    <ImageView
        android:id="@+id/dropdown_arrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:contentDescription="@string/dropdown_arrow_content_desc"
        android:src="@drawable/dropdown_down"/>

</androidx.constraintlayout.widget.ConstraintLayout>